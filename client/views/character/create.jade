.charCreatePage
  h1#Create Create Your Hero
  .charPortrait(style='background-image: url("{{character.portrait}}")')
  h1 {{mode | uppercase}}

  .row
    .col-xs-6
      form(role='form', novalidate, name='charform')
        .row#charSheet
          .col-xs-4
              .form-group
                button.btn.btn-inverse(ng-click='roll()') Generate Stats
              .form-group
                button.btn.btn-success(ng-click='submit()') Submit
              .form-group
                a.btn.btn-primary#charList(ui-sref='charList') Character List
          .col-xs-4#charColumn
              .form-group
                label(for='name') Name
                input.form-control#name(type='text', name='name', ng-model='character.name', required)
              .form-group
                label(for='sex') Gender
                select.form-control#class(type='select', name='sex', ng-model='character.sex', required)
                  option(value='male', name='male') Male
                  option(value='female', name='male') Female
              .form-group
                label(for='race') Race
                select.form-control#charClass(ng-model='character.race', ng-init='changePortrait()', ng-change='changePortrait()', ng-options='opt as opt.label for opt in raceOptions', name='race', required)
          .col-xs-4#classColumn
              .form-group
                label(for='class') Class
                select.form-control#charClass(ng-model='character.charClass', ng-options='opt as opt.label for opt in charOptions', name='charClass', required)
              .form-group
                label(for='weapon') Weapon
                select.form-control#weapon(ng-model='character.weapon', ng-options='opt as opt.label for opt in weaponOptions', name='weapon', required)
              .form-group
                label(for='armor') Armor
                select.form-control#armor(ng-model='character.armor', ng-options='opt as opt.label for opt in armorOptions', name='armor', required)
          
    .col-xs-6
      table#createTable
        thead
          td
          td
          td Ability
          td Score
          td Modifier
        tr
          td Race
          td {{character.race.label}}
          td Strength
          td {{charStats.str}}
          td {{charMods.str}}
        tr
          td Class
          td {{character.charClass.label}}
          td Dexterity
          td {{charStats.dex}}
          td {{charMods.dex}}
        tr
          td Weapon
          td {{character.weapon.label}}
          td Constitution
          td {{charStats.con}}
          td {{charMods.con}}
        tr
          td Armor
          td {{character.armor.label}}
          td Intelligence
          td {{charStats.cha}}
          td {{charMods.cha}}
        tr
          td Feat
          td {{character.feat.label}}
          td Wisdom
          td {{charStats.int}}
          td {{charMods.int}}
        tr
          td 
          td 
          td Charisma
          td {{charStats.wis}}
          td {{charMods.wis}}
  .row
    .col-xs-12
      form(role='form', novalidate, name='featsForm')
        .form-group
          include feats.jade
    .col-xs-12
      form(role='form', novalidate, name='skillsForm')
        .form-group
          include skills.jade
